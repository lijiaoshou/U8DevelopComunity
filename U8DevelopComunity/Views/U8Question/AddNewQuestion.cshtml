<script type="text/javascript">

    $(function () {
        $('#datetimepicker').datetimepicker({
            minView: "month", //选择日期后，不会再跳转去选择时分秒 
            format: "yyyy-mm-dd", //选择日期后，文本框显示的日期格式 
            language: 'zh-CN', //汉化 
            autoclose: true //选择日期后自动关闭 
        });

        $("#pro-developer").append("@Html.Raw(experts)");
        $("#product-category").append("@Html.Raw(products)");
        $("#category").append("@Html.Raw(categories)");
        $("#category").change(IniSonCategory);
    });

    function IniSonCategory() {
        if ($('#category').val() == "0" || $('#category').val() == "10") {
            $('#soncategory').css('display', 'none');
            return;
        }
        else {
            $('#soncategory').css('display', 'inline-block');
        }

        var category = $('#category').val();
        var data = "";
        data = data + "categoryid=" + encodeURI(category);

        //获取子类别
        $.ajax({
            async: true,
            type: "POST",
            url: "/U8Question/GetSonCategory",
            cache: false,
            timeout: 60 * 60 * 1000,
            dataType: "json",
            data: data,
            success: function (result) {
                if (result != null) {//正常返回且成功
                    $('#soncategory').empty();
                    $('#soncategory').append(result.Content);
                }
                else {
                    if (result != null) {//处理cookie超时
                        if (result.Message === 'TimeOut') { alert('登录超时，请重新登录！'); }
                        else { alert(result.Message); search(); }
                    }
                }
            }
        });
    }

    //实例化编辑器
    var ue = UE.getEditor('editor', {

        autoHeightEnabled: false,

        autoFloatEnabled: true,

        //initialFrameWidth: 690,

        initialFrameHeight: 400

    });

    $("#submitQuestion").click(submitQuestion);

    function submitQuestion() {
        if (!confirm("您确定要提交吗？")) {
            return;
        }

        var title = $('#title').val();
        var category = $('#category').val();
        var soncategory = $('#soncategory').val();
        var prodeveloper = $('#pro-developer').val();
        var productcategory = $('#product-category').val();
        var priority = $("#priority").val();
        var expecttime = $('#datetimepicker').val();
        var project = $('#project').val();
        var content =  getContent();
        var score = $('#score').val().replace('分','');
        var data = "";

        data = data + "Title=" + encodeURI(title);
        data = data + "&Category=" + encodeURI(category);
        data = data + "&SonCategory=" + encodeURI(soncategory);
        data = data + "&Expert=" + encodeURI(prodeveloper);
        data = data + "&ProductBelong=" + encodeURI(productcategory);
        data = data + "&Provility=" + encodeURI(priority);
        data = data + "&ExpectFixTime=" + encodeURI(expecttime);
        data = data + "&Project=" + encodeURI(project);
        data = data + "&QuestionContent=" + encodeURI(content);
        //data = data + "&QuestionContent=" + encodeURI("<p>sdfgdsfgsfgfdsg</p><pre class='brush:c#;toolbar:false'>using&nbsp;System;asdfadf</pre><p><img src='/Scripts/ueEditor/net/upload/image/20160530/6360022993747074751917528.gif' title='001mWx81gy6GMysp0jR87&amp;690.gif' alt='001mWx81gy6GMysp0jR87&amp;690.gif'/></p>")
        data = data + "&OfferReward=" + encodeURI(score);

        //新建批次
        $.ajax({
            async: true,
            type: "POST",
            url: "/U8Question/AddNewQuestion",
            cache: false,
            timeout: 60 * 60 * 1000,
            dataType: "json",
            data: data,
            success: function (result) {

                if (result != null && result.Message == "@(U8DevelopComunity.Common.U8StandardMessage.Success)") {//正常返回且成功
                    alert("添加成功");
                    //添加成功后刷新批次列表页面
                    location.href = "/U8Question/Index";
                }
                else {
                    if (result != null) {//处理cookie超时
                        if (result.Message === 'TimeOut') { alert('登录超时，请重新登录！'); }
                        else { alert(result.Message); search(); }
                    }
                }
            }
        });
    }

    $("#btnCancle").click(function () {
        if (!confirm("您确定要取消么？")) {
            return;
        }
        location.href = "/U8Question/Index";
    });

    function getContent() {
        var arr = [];
        //arr.push("使用editor.getContent()方法可以获得编辑器的内容");
        //arr.push("内容为：");
        // arr.push();
        //alert(arr.join("\n"));
        return UE.getEditor('editor').getContent()
    }
</script>
