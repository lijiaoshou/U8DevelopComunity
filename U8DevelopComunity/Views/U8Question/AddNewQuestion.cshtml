
@{
    ViewBag.Title = "AddNewQuestion";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Entity.U8User> listExpert = ViewBag.Expert as List<Entity.U8User>;
    string experts = "<option value='0'>选择专家</option>";
    string products = "";
    string categories = "<option value='0'>选择分类</option>";
    if (listExpert != null)
    {
        foreach(Entity.U8User u8user in listExpert)
        {
            experts += "<option value='" + u8user.UserId + "'" + ">" + u8user.RealName + "  " + u8user.Department + "</option>";
        }
    }

    List<Entity.U8ProductEnum> listProduct = ViewBag.U8ProductEnum as List<Entity.U8ProductEnum>;
    if (listProduct != null)
    {
        foreach (Entity.U8ProductEnum product in listProduct)
        {
            products += "<option value='" + product.id + "'" + ">" + product.Name + "</option>";
        }
    }

    List<Entity.U8Category> listCategory = ViewBag.U8Category as List<Entity.U8Category>;
    if (listCategory != null)
    {
        foreach (Entity.U8Category category in listCategory)
        {
            categories += "<option value='" + category.id + "'" + ">" + category.CategoryName + "</option>";
        }
    }
}

