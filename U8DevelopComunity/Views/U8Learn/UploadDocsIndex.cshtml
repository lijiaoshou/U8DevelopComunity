<div class="mycenter">
    <div style="height:30px;line-height:30px">
        <img src="@Url.Content("~/image/atv.png")" alt="上传知识" />
        <span style="margin-left:5px;">上传知识</span>
    </div>


    <table class="mycenter table table-hover table-striped table-responsive question-table" style="width:100%;margin-top:1px;">
        <tbody id="myTable">
            <tr>
                <td><label for="title" class="question-table-desc">标题</label></td>
                <td><input type="text" name="title" id="title" /></td>
            </tr>
            <tr>
                <td><label for="summary" class="question-table-desc">摘要</label></td>
                <td><input type="text" name="summary" id="summary"/></td>
            </tr>
            <tr>
                <td><label for="category" class="question-table-desc">请选择分类</label></td>
                <td><select id="category"></select></td>
            </tr>
            <tr>
                <td style="width:12%;"><label for="content" class="question-table-desc">内容</label></td>
                <td style="height:320px;line-height: 1.428571429;">
                    <script id="editor" type="text/plain">
                    </script>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input class="btn btn-primary" type="button" id="saveDocs" value="保存" />&nbsp;&nbsp;
                    <input class="btn btn-default" type="button" id="btnCancle" value="取消" />
                </td>
            </tr>
        </tbody>
    </table>
    <script type="text/javascript">


    </script>
</div>

<!-- 实例化编辑器 -->
<script type="text/javascript">

    $(function () {
        $('#btnCancle').click(cancle);
        $('#saveDocs').click(saveDocs);
        $("#category").append("@Html.Raw(categories)");

    });

    function saveDocs() {
        if (!confirm("您确定要提交吗？")) {
            return;
        }

        var title = $('#title').val();
        var docPath = getContent();
        var category = $('#category').val();
        var summary = $('#summary').val();

        var data = "";

        data = data + "DocName=" + encodeURI(title);
        data = data + "&DocPath=" + encodeURI(docPath);
        data = data + "&TechDocCategory=" + encodeURI(category);
        data = data + "&Summary=" + encodeURI(summary);


        //新建批次
        $.ajax({
            async: true,
            type: "POST",
            url: "/U8Learn/UploadDocs",
            cache: false,
            timeout: 60 * 60 * 1000,
            dataType: "json",
            data: data,
            success: function (result) {

                if (result != null && result.Message == "@(U8DevelopComunity.Common.U8StandardMessage.Success)") {//正常返回且成功
                    alert("上传成功");
                    //添加成功后刷新批次列表页面
                    location.href = "/U8Learn/Index";
                }
                else {
                    if (result != null) {//处理cookie超时
                        if (result.Message === 'TimeOut') { alert('登录超时，请重新登录！'); }
                        else { alert(result.Message); search(); }
                    }
                }
            }
        });
    }

    function cancle() {
        if (!confirm("您确定要取消么？")) {
            return;
        }
        location.href = "/U8Learn/Index";
    }

    //实例化编辑器
    var ue = UE.getEditor('editor', {

        autoHeightEnabled: false,

        autoFloatEnabled: true,

        //initialFrameWidth: 690,

        initialFrameHeight: 400

    });

    function getContent() {
        var arr = [];
        return UE.getEditor('editor').getContent()
    }

    function setContent(str, isAppendTo) {
        //判断ueditor 编辑器是否创建成功
        UE.getEditor('editor').addListener("ready", function () {
            // editor准备好之后才可以使用
            UE.getEditor('editor').setContent(str, isAppendTo);
        });
    }
</script>

