<body class="login1">
    <!-- Login Screen -->
    <div class="login-wrapper">
        <div class="login-container">
            <a href="#"><img width="100" height="30" src="~/image/login2.png" /></a>
            @*<form action="/U8System/Login" method="post">*@
            @using (Ajax.BeginForm("Login", "U8System", new { }, new AjaxOptions() { HttpMethod = "post", OnSuccess = "afterLogin" }, new { id = "loginForm" }))
            {
                <div class="form-group">
                    <input class="form-control" placeholder="邮箱地址" type="text" name="LoginCode" required>
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="密码" type="password" name="LoginPwd" required>
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="输入验证码" type="text" name="vCode_Login" required style="width:60%;float:left;">
                    <img id="img" src="/U8System/ShowLoginValidateCode/?id=1" style="width:20%;left:-25px;position:relative;" onclick="changeCheckCode();" />
                    <input type="submit" value="&#xf054;" style="width:10%;">
                </div>
                <div class="form-options clearfix">
                    <a class="pull-right" href="/U8System/ForgotPassword">忘记密码?</a>
                    <div class="text-left">
                        <label class="checkbox"><input type="checkbox" name="AutoLogin"><span>一周内自动登录</span></label>
                    </div>
                </div>
            }

            @*</form>*@
            <p class="signup" >
                还没有U8开发者账户? <a href="/U8System/Register" style="margin-left:5px;">立即注册</a>
            </p>
        </div>
    </div>
    <!-- End Login Screen -->
</body>

