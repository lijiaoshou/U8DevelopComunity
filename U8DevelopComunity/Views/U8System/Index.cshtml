    <script type="text/javascript">
        function changeCheckCode() {
            $("#img").attr("src", $("#img").attr("src") + 1);  //id=2
        }

        function afterLogin(data) {
            var serverData = data.split(':');
            if (serverData[0] == "ok") {
                //alert("登录成功");
                window.location.href = "/U8Question/Index";
            } else if (serverData[0] == "no") {
                alert("登录失败");
                changeCheckCode();
            } else {
                alert("系统繁忙!!");
            }
        }
    </script>
