<body class="login1">
    <!-- Login Screen -->
    <div class="login-wrapper">
        <div class="login-container">
            <a href="index.html"><img width="100" height="30" src="~/image/logo-login@2x.png" /></a>
            @*<form action="/U8System/ForgotPassword" method="post">*@
            @using (Ajax.BeginForm("ForgotPassword", "U8System",  new { }, new AjaxOptions() { HttpMethod = "post", OnSuccess = "afterForgotPassword" }, new { id = "forgotPasswordForm" }))
            {
                <div class="form-group">
                    <input class="form-control" placeholder="输入验证码" name="vCode_ForgotPassword" type="text" required style="width:80%;float:left;">
                    <img id="img" src="/U8System/ShowForgotPasswordValidateCode/?id=1" style="width:20%;" onclick="changeCheckCode();" />
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="输入用户邮箱地址" name="userEmail" type="text" required><input type="submit" value="&#xf054;">
                </div>
                <p class="signup" style="margin-top:50px;">
                    还没有U8开发者账户? <a href="/U8System/Register">立即注册</a>
                </p>
                <a href="/U8System/Index">返回登录界面</a>
            }
            @*</form>*@
        </div>
    </div>
