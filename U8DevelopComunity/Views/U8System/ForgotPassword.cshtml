    <script type="text/javascript">
        function changeCheckCode() {
            $("#img").attr("src", $("#img").attr("src") + 1);  //id=2
        }

        function afterForgotPassword(data) {
            var serverData = data.split(':');
            if (serverData[0] == "ok") {
                alert("重置密码已经发送到注册邮箱，请重新登录！");
                window.location.href = "/U8System/Index";
            } else if (serverData[0] == "no") {
                alert("登录失败");
                changeCheckCode();
            } else {
                alert("系统繁忙!!");
            }
        }
    </script>
