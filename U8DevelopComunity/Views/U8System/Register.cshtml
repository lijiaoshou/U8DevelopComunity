    <style>
        div select {
            margin-top: 10px;
        }
        .clear{ clear:both}
        body.login1.signup  .register{
            height:716px;
            margin-top:-358px;

        }
    </style>
    <script type="text/javascript">
        $(function () {
            $('#userProvince, #userCity').citylist({
                data: data,
                id: 'id',
                children: 'cities',
                name: 'name',
                metaTag: 'name'
            });

            $('#userProvince').prepend('<option value="" selected="selected">选择省</option>');
            $('#userCity').prepend('<option value="" selected="selected">选择城市</option>');

            $('input').attr('autocomplete', 'off');

        });

        function changeCheckCode() {
            $("#img").attr("src", $("#img").attr("src") + 1);  //id=2
        }

        //异步注册回调函数
        function afterRegist(data) {
            var serverData = data.split(';');
            if (serverData[0] == "ok") {
                alert("注册成功！")
                window.top.location.href = "/U8System/Index";
            } else if (serverData[0] == "no") {
                alert(serverData[1]);
                changeCheckCode();
            } else {
                alert("系统繁忙!!");
            }

        }
    </script>
